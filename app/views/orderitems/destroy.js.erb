<% if @removed_item.destroyed? %>
  $("#um_oi_<%= @removed_item.id %>").remove();
  $("#oi_row_<%= @removed_item.id %>").remove();
  <%= add_gritter("You have removed #{@removed_item.item.description} from your order.", title: "Item Removed to Order") %>;
<% else %>
  $("#q_<%= @removed_item.id %>").text("<%= @removed_item.quantity %>");
  $("#oi_i_q_<%= @removed_item.id %>").text("<%= @removed_item.quantity %>");
  <%= add_gritter("#{@removed_item.item.description} removed from your order.  You have #{@removed_item.quantity} on order.", title: "Item Removed to Order", time: 2000) %>;
<% end %>
$("#um_total").text("Total: <%= number_to_currency(total_price(current_user_orderitems), unit: '£') %>");
$("#oi_total").text("Total: <%= number_to_currency(total_price(current_user_orderitems), unit: '£') %>");
