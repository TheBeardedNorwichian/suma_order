<% provide(:title, @group.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
          <%= @group.name %>
      </h1>
    </section>  
    <section>
      <div class="btn-group">
        <%= link_to "New Order", new_group_order_path(@group), class: "btn btn-warning" %>
        <%= link_to "New User", new_group_user_path(@group), class: "btn btn-success" %>
      </div>
    </section>
    <section>
      <ul>
        <% @group.users.each do |user| %>
      <li><%= link_to "#{user.name}", user %></li>
        <% end %>
      </ul>
    </section>
  </aside>
  <div class="span8">
  <h2>Current Order</h2>
      <%= render 'layouts/order_table', orders: @current_order, group: @group%>
    <h2>Other Orders</h2>
      <%= render 'layouts/order_table', orders: @other_orders, group: @group %>
  </div>
</div>