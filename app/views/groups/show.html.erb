<% provide(:title, @group.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
          <%= @group.name %>
      </h1>
    </section>
    <section>

    </section>
  </aside>
  <div class="span8">
  <h2>Current Order</h2>
       <table class="table table-striped table-hover table-condensed table-bordered items-table">
        <thead>
          <tr>
            <th>Order</th>
            <th>Open Date</th>
            <th>Deadline</th>
            <th>Delivery Date</th>
            <th>Active</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= link_to "#{@current_order.id}", group_order_path(@group, @current_order) %></td>
            <td><%= @current_order.open %></td>
            <td><%= @current_order.deadline %></td>
            <td><%= @current_order.delivery %></td>
            <td><%= @current_order.is_current? ? "Yes" : "No" %></td>
          </tr>
        </tbody>
      </table>
    <h2>Other Orders</h2>
     <table class="table table-striped table-hover table-condensed table-bordered items-table">
        <thead>
          <tr>
            <th>Order</th>
            <th>Open Date</th>
            <th>Deadline</th>
            <th>Delivery Date</th>
            <th>Active</th>
          </tr>
        </thead>
        <tbody>
      <% @older_orders.each do |x| %>
          <tr>
            <td><%= link_to "#{x.id}", group_order_path(@group, x) %></td>
            <td><%= x.open %></td>
            <td><%= x.deadline %></td>
            <td><%= x.delivery %></td>
            <td><%= x.is_current? ? "Yes" : "No" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>