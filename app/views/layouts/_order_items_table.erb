<table class="table table-striped table-hover table-condensed table-bordered items-table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Category</th>
      <th>Brand</th>
      <th>Size</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Who</th>
      <% if signed_in? %>
      <th>Remove</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% order.orderitems.each do |oi| %>
    <tr>
      <td><strong><%= oi.item.code %><strong></td>
      <td><%= oi.item.description %></td>
      <td><%= oi.item.category.name %></td>
      <td><%= oi.item.brand.name %></td>
      <td><%= oi.item.size %></td>
      <td><%= oi.quantity %></td>
      <td><%= number_to_currency(oi.item.price * oi.quantity, unit: 'Â£') %></td>
      <td><%= oi.user.name %></td>
      <% if signed_in? %>
      <td><%= render 'orderitems/delete_button', orderitem: oi %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>