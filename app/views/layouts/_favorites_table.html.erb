 <table class="table table-striped table-hover table-condensed table-bordered items-table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Description</th>
        <th>Added</th>
        <th>Notes</th>
        <th>Add to order</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
    <% user_favorites.each do | fav | %>
      <tr>
        <td class="table-code"><%= fav.item.code %></td>
        <td ><%= fav.item.description %></td>
        <td><%= fav.updated_at.strftime('%A, %b %d') %></td>
        <td><%= fav.notes %></td>
        <td> Add to order</td>
        <td> Delete </td>
      </tr>
    <% end %>
    </tbody>
  </table>