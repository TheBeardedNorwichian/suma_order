<li id="fat-menu" class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <%= @current_user.name %> <b class="caret"></b>
  </a>

  <ul class="dropdown-menu">
    <% if signed_in? %>
    <li class="nav-header">My Stuff</li>
    <li class="dropdown-submenu">
      <a tabindex="-1" href="">Your Order</a>
      <ul class="dropdown-menu">
        <% if current_user_orderitems.empty? %>
          <div class="alert alert-warning"><li><%= "Your order is empty" %></li></div>
        <% elsif %>
          <%current_user_orderitems.each do |oi| %>
          <li><%= oi.item.description %>
            <span class="badge pull-right"><%= oi.quantity %></span>
          </li>
          <% end %>
        <% end %>
        <li><a tabindex="-1" href="#"><strong>Total: <%= number_to_currency(total_price(current_user_orderitems), unit: "Â£") %></strong></a></li>
      </ul>
    </li>
    <li><%=link_to "Profile", '#' %></li>
    <li><%=link_to "Order History", '#' %></li>
    <% end %>
    <% if admin? %>
    <li class="divider"></li>
    <li class="nav-header">Admin</li>
    <li><%=link_to "Users", users_path %></li>
    <li><%=link_to "Groups", groups_path %></li>
    <li><%=link_to "New Group", new_group_path %></li>
    <% end %>
    <li class="divider"></li>
    <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
  </ul>
</li>