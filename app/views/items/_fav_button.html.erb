<% if is_favorite?(item) %>
    <% fav = Favorite.where(user_id: current_user.id, item_id: item.id).first %>
    <%= link_to '<span class="glyphicon glyphicon-star"></span>'.html_safe, user_favorite_path(user_id: current_user.id, id: fav.id), method: :delete, class: "btn btn-mini btn-warning", title: "Remove favorite"%>
  <% else %>
    <%= link_to '<span class="glyphicon glyphicon-star-empty"></span>'.html_safe, user_favorites_path(user_id: current_user.id, item_id: item.id), method: :post, class: "btn btn-mini", title: "Add favorite" %>
<% end %>
