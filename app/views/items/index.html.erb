<h1>Items</h1>

  <table class="table table-striped table-hover table-condensed table-bordered">
    <thead>
      <tr>
        <th><%= link_to "Description", sort: "description" %></th>
        <th><%= link_to "Price", sort: "price" %></th>
        <th><%= link_to "Size", sort: "size" %></th>
        <th><%= link_to "Code", sort: "code" %></th>
        <th><%= link_to "Category", sort: "categories.name" %></th>
        <th><%= link_to "Brand", sort: "brands.name" %></th>
      </tr>
    </thead>
    <tbody>
  <% @items.each do |x| %>
      <tr>
        <td><%= x.description %></td>
        <td><%= number_to_currency(x.price, unit: "Â£") %></td>
        <td><%= x.size %></td>
        <td class="table-code"><%= x.code %></td>
        <td><%= x.category.name %></td>
        <td><%= x.brand != nil ? x.brand.name : "no brand" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>