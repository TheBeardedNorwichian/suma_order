<table class="table table-striped table-hover table-condensed table-bordered items-table">
  <thead>
    <tr>
      <th>Open Date</th>
      <th>Deadline</th>
      <th>Delivery Date</th>
      <th>Active</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.open %></td>
      <td><%= @order.deadline %></td>
      <td><%= @order.delivery %></td>
      <td><%= @order.is_current? ? "Yes" : "No" %></td>
    </tr>
  </tbody>
</table>
<table class="table table-striped table-hover table-condensed table-bordered items-table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Category</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Who</th>
    </tr>
  </thead>
  <tbody>
  <% @order.orderitems.each do |oi| %>
    <tr>
      <td><%= oi.item.description %></td>
      <td><%= oi.item.category.name %></td>
      <td><%= oi.item.brand.name %></td>
      <td><%= number_to_currency(oi.item.price, unit: 'Â£') %></td>
      <td><%= oi.quantity %></td>
      <td><%= oi.user.name %>
    </tr>
  <% end %>
  </tbody>
</table>