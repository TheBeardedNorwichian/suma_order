 <table class="table table-striped table-hover table-condensed table-bordered items-table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Description</th>
        <th>Added</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
    <% @favorites.each do | fav | %>
      <tr id='fav_row_<%= fav.id %>'>
        <td class="table-code"><%= fav.item.code %></td>
        <td><%= fav.item.description %></td>
        <td><%= fav.updated_at.strftime('%A, %b %d') %></td>
        <td><div class="btn-group"><%= render 'items/add_button', item: fav.item %><%= render 'items/fav_button', item: fav.item %></div></td>
      </tr>
    <% end %>
    </tbody>
  </table>